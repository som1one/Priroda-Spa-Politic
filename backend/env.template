# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5437/spa_db

# ============================================
# Security & Authentication
# ============================================
SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ADMIN_INVITE_EXPIRATION_MINUTES=60
ADMIN_PANEL_BASE_URL=http://localhost:3001

# ============================================
# Initial Super Admin
# ============================================
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=change-me-strong-password

# ============================================
# Email Configuration
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here
EMAIL_FROM=noreply@spa-app.com
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# ============================================
# Application Configuration
# ============================================
API_V1_PREFIX=/api/v1
# Режим работы: development или production
ENVIRONMENT=development
# DEBUG режим (автоматически отключается в production)
DEBUG=True

# CORS Origins (разделить запятыми для нескольких)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,*

# ============================================
# Redis Configuration (опционально)
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=False

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000
RELOAD=True

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Verification Code
# ============================================
VERIFICATION_CODE_EXPIRE_MINUTES=10
VERIFICATION_CODE_LENGTH=6

